@page
@model IndexModel
@{
    ViewData["Title"] = "Menu Karyawan";
}

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2 class="text-primary fw-bold">
                    <i class="fas fa-users me-2"></i>Menu Karyawan
                </h2>
                <div class="d-flex gap-3 align-items-center">
                    <div class="badge bg-success fs-6">
                        <i class="fas fa-clock me-1"></i>
                        <span id="currentTime"></span>
                    </div>
                    <button class="btn btn-primary btn-sm" onclick="refreshOrders()">
                        <i class="fas fa-sync-alt me-1"></i>Refresh Data
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Stats -->
    <div class="row mb-4">
        <div class="col-lg-3 col-md-6 mb-3">
            <div class="card stat-card bg-primary text-white h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title mb-1">Pesanan Hari Ini</h6>
                            <h3 class="mb-0" id="todayOrders">0</h3>
                            <small class="opacity-75">Total pesanan masuk</small>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-shopping-cart fa-2x opacity-75"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6 mb-3">
            <div class="card stat-card bg-warning text-white h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title mb-1">Menunggu Proses</h6>
                            <h3 class="mb-0" id="pendingOrders">0</h3>
                            <small class="opacity-75">Perlu ditindaklanjuti</small>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-hourglass-half fa-2x opacity-75"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6 mb-3">
            <div class="card stat-card bg-info text-white h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title mb-1">Sedang Diproses</h6>
                            <h3 class="mb-0" id="processingOrders">0</h3>
                            <small class="opacity-75">Dalam pengerjaan</small>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-cog fa-spin fa-2x opacity-75"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6 mb-3">
            <div class="card stat-card bg-success text-white h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title mb-1">Selesai Hari Ini</h6>
                            <h3 class="mb-0" id="completedOrders">0</h3>
                            <small class="opacity-75">Siap diambil</small>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-check-circle fa-2x opacity-75"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Orders Management -->
    <div class="row">
        <div class="col-12">
            <div class="card dashboard-card shadow">
                <div class="card-header bg-light border-0">
                    <div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center gap-3">
                        <h5 class="mb-0 text-primary fw-bold">
                            <i class="fas fa-list me-2"></i>Daftar Pesanan Laundry
                        </h5>
                        <div class="d-flex flex-column flex-sm-row gap-2">
                            <select class="form-select form-select-sm" id="statusFilter" style="min-width: 180px;">
                                <option value="">Semua Status</option>
                                <option value="Menunggu Konfirmasi">Menunggu Konfirmasi</option>
                                <option value="Diterima">Diterima</option>
                                <option value="Dicuci">Dicuci</option>
                                <option value="Disetrika">Disetrika</option>
                                <option value="Selesai">Selesai</option>
                            </select>
                            <input type="text" class="form-control form-control-sm" id="searchInput" placeholder="Cari pesanan..." style="min-width: 200px;">
                        </div>
                    </div>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th class="px-3 py-3">
                                        <i class="fas fa-hashtag me-1"></i>ID Pesanan
                                    </th>
                                    <th class="px-3 py-3">
                                        <i class="fas fa-user me-1"></i>Pelanggan
                                    </th>
                                    <th class="px-3 py-3">
                                        <i class="fas fa-tshirt me-1"></i>Layanan
                                    </th>
                                    <th class="px-3 py-3">
                                        <i class="fas fa-weight me-1"></i>Berat
                                    </th>
                                    <th class="px-3 py-3">
                                        <i class="fas fa-money-bill me-1"></i>Total
                                    </th>
                                    <th class="px-3 py-3">
                                        <i class="fas fa-info-circle me-1"></i>Status
                                    </th>
                                    <th class="px-3 py-3">
                                        <i class="fas fa-calendar me-1"></i>Tanggal
                                    </th>
                                    <th class="px-3 py-3 text-center">
                                        <i class="fas fa-cogs me-1"></i>Aksi
                                    </th>
                                </tr>
                            </thead>
                            <tbody id="ordersTableBody">
                                <tr>
                                    <td colspan="8" class="text-center py-5">
                                        <div class="spinner-border text-primary mb-3" role="status">
                                            <span class="visually-hidden">Loading...</span>
                                        </div>
                                        <p class="text-muted mb-0">Memuat data pesanan...</p>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="card-footer bg-light border-0">
                    <div class="d-flex justify-content-between align-items-center">
                        <small class="text-muted">
                            <i class="fas fa-info-circle me-1"></i>
                            Total: <span id="totalOrders">0</span> pesanan
                        </small>
                        <small class="text-muted">
                            <i class="fas fa-sync-alt me-1"></i>
                            Terakhir diperbarui: <span id="lastUpdated">-</span>
                        </small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Order Detail Modal -->
<div class="modal fade" id="orderDetailModal" tabindex="-1">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title">
                    <i class="fas fa-info-circle me-2"></i>Detail Pesanan Laundry
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body" id="orderDetailContent">
                <!-- Content will be loaded here -->
            </div>
            <div class="modal-footer bg-light">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="fas fa-times me-1"></i>Tutup
                </button>
                <button type="button" class="btn btn-info" id="downloadPdfBtn" onclick="downloadPdfFromModal()">
                    <i class="fas fa-file-pdf me-1"></i>Download PDF
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Update Status Modal -->
<div class="modal fade" id="updateStatusModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-success text-white">
                <h5 class="modal-title">
                    <i class="fas fa-edit me-2"></i>Update Status Pesanan
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="updateStatusForm">
                    <input type="hidden" id="updateOrderId" />
                    <div class="mb-3">
                        <label for="currentStatus" class="form-label">Status Saat Ini</label>
                        <input type="text" class="form-control" id="currentStatus" readonly>
                    </div>
                    <div class="mb-3">
                        <label for="newStatus" class="form-label">Status Baru <span class="text-danger">*</span></label>
                        <select class="form-select" id="newStatus" required>
                            <option value="">Pilih Status Baru</option>
                            <option value="Diterima">âœ… Diterima</option>
                            <option value="Dicuci">ğŸ§¼ Dicuci</option>
                            <option value="Disetrika">ğŸ‘” Disetrika</option>
                            <option value="Selesai">âœ¨ Selesai</option>
                        </select>
                        <div class="form-text">Pilih status sesuai dengan proses kerja yang telah dilakukan</div>
                    </div>
                    <div class="alert alert-info">
                        <i class="fas fa-info-circle me-2"></i>
                        <strong>Catatan:</strong> Perubahan status akan langsung tersimpan dan dapat dilihat oleh pelanggan.
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="fas fa-times me-1"></i>Batal
                </button>
                <button type="button" class="btn btn-success" onclick="updateOrderStatus()">
                    <i class="fas fa-save me-1"></i>Update Status
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteConfirmModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title">
                    <i class="fas fa-exclamation-triangle me-2"></i>Konfirmasi Hapus Pesanan
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div class="text-center mb-3">
                    <i class="fas fa-trash-alt fa-3x text-danger mb-3"></i>
                    <h6>Apakah Anda yakin ingin menghapus pesanan ini?</h6>
                </div>
                <div class="alert alert-warning">
                    <i class="fas fa-exclamation-triangle me-2"></i>
                    <strong>Peringatan:</strong> Tindakan ini tidak dapat dibatalkan. Semua data pesanan akan dihapus secara permanen.
                </div>
                <div class="card bg-light">
                    <div class="card-body">
                        <h6 class="card-title">Detail Pesanan yang akan dihapus:</h6>
                        <div id="deleteOrderDetails">
                            <!-- Order details will be loaded here -->
                        </div>
                    </div>
                </div>
                <input type="hidden" id="deleteOrderId" />
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="fas fa-times me-1"></i>Batal
                </button>
                <button type="button" class="btn btn-danger" onclick="confirmDeleteOrder()">
                    <i class="fas fa-trash me-1"></i>Ya, Hapus Pesanan
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/employee.js"></script>
}