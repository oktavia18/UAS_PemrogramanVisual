@page
@model IndexModel
@{
    ViewData["Title"] = "Menu Admin";
}

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2 class="text-primary fw-bold">
                    <i class="fas fa-cog me-2"></i>Menu Admin
                </h2>
                <div class="badge bg-primary fs-6">
                    <i class="fas fa-user-shield me-1"></i>Administrator
                </div>
            </div>
        </div>
    </div>

    <!-- Navigation Tabs -->
    <ul class="nav nav-tabs mb-4" id="adminTabs" role="tablist">
        <li class="nav-item" role="presentation">
            <button class="nav-link active" id="dashboard-tab" data-bs-toggle="tab" data-bs-target="#dashboard" type="button" role="tab">
                <i class="fas fa-chart-line me-1"></i>Dashboard
            </button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="services-tab" data-bs-toggle="tab" data-bs-target="#services" type="button" role="tab">
                <i class="fas fa-concierge-bell me-1"></i>Layanan & Harga
            </button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="customers-tab" data-bs-toggle="tab" data-bs-target="#customers" type="button" role="tab">
                <i class="fas fa-users me-1"></i>Data Pelanggan
            </button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="employees-tab" data-bs-toggle="tab" data-bs-target="#employees" type="button" role="tab">
                <i class="fas fa-user-tie me-1"></i>Data Karyawan
            </button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="reports-tab" data-bs-toggle="tab" data-bs-target="#reports" type="button" role="tab">
                <i class="fas fa-chart-bar me-1"></i>Laporan
            </button>
        </li>
    </ul>

    <!-- Tab Content -->
    <div class="tab-content" id="adminTabContent">
        <!-- Dashboard Tab -->
        <div class="tab-pane fade show active" id="dashboard" role="tabpanel">
            <div class="row mb-4">
                <div class="col-md-3">
                    <div class="card bg-primary text-white">
                        <div class="card-body">
                            <div class="d-flex justify-content-between">
                                <div>
                                    <h6 class="card-title">Total Pesanan</h6>
                                    <h3 id="dashTotalOrders">0</h3>
                                </div>
                                <div class="align-self-center">
                                    <i class="fas fa-shopping-cart fa-2x"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card bg-success text-white">
                        <div class="card-body">
                            <div class="d-flex justify-content-between">
                                <div>
                                    <h6 class="card-title">Total Pelanggan</h6>
                                    <h3 id="dashTotalCustomers">0</h3>
                                </div>
                                <div class="align-self-center">
                                    <i class="fas fa-users fa-2x"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card bg-info text-white">
                        <div class="card-body">
                            <div class="d-flex justify-content-between">
                                <div>
                                    <h6 class="card-title">Total Karyawan</h6>
                                    <h3 id="dashTotalEmployees">0</h3>
                                </div>
                                <div class="align-self-center">
                                    <i class="fas fa-user-tie fa-2x"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card bg-warning text-white">
                        <div class="card-body">
                            <div class="d-flex justify-content-between">
                                <div>
                                    <h6 class="card-title">Pendapatan</h6>
                                    <h3 id="dashTotalRevenue">Rp 0</h3>
                                </div>
                                <div class="align-self-center">
                                    <i class="fas fa-money-bill-wave fa-2x"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-8">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="mb-0">Pesanan Terbaru</h5>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-sm">
                                    <thead>
                                        <tr>
                                            <th>ID</th>
                                            <th>Pelanggan</th>
                                            <th>Layanan</th>
                                            <th>Status</th>
                                            <th>Total</th>
                                        </tr>
                                    </thead>
                                    <tbody id="recentOrdersTable">
                                        <!-- Recent orders will be loaded here -->
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="mb-0">Ringkasan Hari Ini</h5>
                        </div>
                        <div class="card-body">
                            <div class="mb-3">
                                <div class="d-flex justify-content-between">
                                    <span>Pesanan Hari Ini:</span>
                                    <strong id="dashTodayOrders">0</strong>
                                </div>
                            </div>
                            <div class="mb-3">
                                <div class="d-flex justify-content-between">
                                    <span>Menunggu Proses:</span>
                                    <strong id="dashPendingOrders">0</strong>
                                </div>
                            </div>
                            <div class="mb-3">
                                <div class="d-flex justify-content-between">
                                    <span>Selesai:</span>
                                    <strong id="dashCompletedOrders">0</strong>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Services Tab -->
        <div class="tab-pane fade" id="services" role="tabpanel">
            <div class="card">
                <div class="card-header">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">Manajemen Layanan & Harga</h5>
                        <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addServiceModal">
                            <i class="fas fa-plus me-1"></i>Tambah Layanan
                        </button>
                    </div>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Nama Layanan</th>
                                    <th>Kategori</th>
                                    <th>Harga/Kg</th>
                                    <th>Estimasi</th>
                                    <th>Status</th>
                                    <th>Aksi</th>
                                </tr>
                            </thead>
                            <tbody id="servicesTable">
                                <!-- Services will be loaded here -->
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <!-- Customers Tab -->
        <div class="tab-pane fade" id="customers" role="tabpanel">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Data Pelanggan</h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Nama Lengkap</th>
                                    <th>No. Telepon</th>
                                    <th>Email</th>
                                    <th>Total Pesanan</th>
                                    <th>Total Belanja</th>
                                    <th>Status</th>
                                </tr>
                            </thead>
                            <tbody id="customersTable">
                                <!-- Customers will be loaded here -->
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <!-- Employees Tab -->
        <div class="tab-pane fade" id="employees" role="tabpanel">
            <div class="card">
                <div class="card-header">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">Data Karyawan</h5>
                        <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addEmployeeModal">
                            <i class="fas fa-plus me-1"></i>Tambah Karyawan
                        </button>
                    </div>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Nama Lengkap</th>
                                    <th>Jabatan</th>
                                    <th>No. Telepon</th>
                                    <th>Email</th>
                                    <th>Tanggal Masuk</th>
                                    <th>Status</th>
                                    <th>Aksi</th>
                                </tr>
                            </thead>
                            <tbody id="employeesTable">
                                <!-- Employees will be loaded here -->
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <!-- Reports Tab -->
        <div class="tab-pane fade" id="reports" role="tabpanel">
            <div class="card">
                <div class="card-header">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">Laporan Transaksi</h5>
                        <div class="d-flex gap-2">
                            <input type="date" class="form-control" id="startDate" style="width: auto;">
                            <input type="date" class="form-control" id="endDate" style="width: auto;">
                            <button class="btn btn-primary" onclick="generateReport()">
                                <i class="fas fa-search me-1"></i>Filter
                            </button>
                            <button class="btn btn-success" onclick="exportToPDF()">
                                <i class="fas fa-file-pdf me-1"></i>Export PDF
                            </button>
                            <button class="btn btn-info" onclick="downloadAllReportsPDF()">
                                <i class="fas fa-download me-1"></i>Download Semua Laporan (PDF)
                            </button>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row mb-4">
                        <div class="col-md-3">
                            <div class="card bg-light">
                                <div class="card-body text-center">
                                    <h5 id="reportTotalTransactions">0</h5>
                                    <small>Total Transaksi</small>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="card bg-light">
                                <div class="card-body text-center">
                                    <h5 id="reportTotalRevenue">Rp 0</h5>
                                    <small>Total Pendapatan</small>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="card bg-light">
                                <div class="card-body text-center">
                                    <h5 id="reportCompletedOrders">0</h5>
                                    <small>Pesanan Selesai</small>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="card bg-light">
                                <div class="card-body text-center">
                                    <h5 id="reportPendingOrders">0</h5>
                                    <small>Pesanan Pending</small>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>ID Pesanan</th>
                                    <th>Pelanggan</th>
                                    <th>Layanan</th>
                                    <th>Total</th>
                                    <th>Status</th>
                                    <th>Tanggal</th>
                                    <th>Aksi</th>
                                </tr>
                            </thead>
                            <tbody id="reportsTable">
                                <!-- Report data will be loaded here -->
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Add Service Modal -->
<div class="modal fade" id="addServiceModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Tambah Layanan Baru</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="addServiceForm">
                    <div class="mb-3">
                        <label for="serviceName" class="form-label">Nama Layanan</label>
                        <input type="text" class="form-control" id="serviceName" required>
                    </div>
                    <div class="mb-3">
                        <label for="serviceDescription" class="form-label">Deskripsi</label>
                        <textarea class="form-control" id="serviceDescription" rows="3"></textarea>
                    </div>
                    <div class="mb-3">
                        <label for="serviceCategory" class="form-label">Kategori</label>
                        <select class="form-select" id="serviceCategory" required>
                            <option value="">Pilih Kategori</option>
                            <option value="Cuci Kering">Cuci Kering</option>
                            <option value="Cuci Setrika">Cuci Setrika</option>
                            <option value="Dry Clean">Dry Clean</option>
                            <option value="Express">Express</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label for="servicePrice" class="form-label">Harga per Kg</label>
                        <input type="number" class="form-control" id="servicePrice" required>
                    </div>
                    <div class="mb-3">
                        <label for="serviceEstimation" class="form-label">Estimasi Waktu</label>
                        <input type="text" class="form-control" id="serviceEstimation" placeholder="contoh: 2-3 hari" required>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Batal</button>
                <button type="button" class="btn btn-primary" onclick="addService()">Simpan</button>
            </div>
        </div>
    </div>
</div>

<!-- Add Employee Modal -->
<div class="modal fade" id="addEmployeeModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Tambah Karyawan Baru</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="addEmployeeForm">
                    <div class="mb-3">
                        <label for="employeeName" class="form-label">Nama Lengkap</label>
                        <input type="text" class="form-control" id="employeeName" required>
                    </div>
                    <div class="mb-3">
                        <label for="employeeEmail" class="form-label">Email</label>
                        <input type="email" class="form-control" id="employeeEmail" required>
                    </div>
                    <div class="mb-3">
                        <label for="employeePhone" class="form-label">No. Telepon</label>
                        <input type="text" class="form-control" id="employeePhone" required pattern="[0-9\s\-\+\(\)]+" title="Hanya angka yang diperbolehkan">
                        <small class="text-muted">Hanya angka, spasi, tanda hubung, dan tanda kurung yang diperbolehkan</small>
                    </div>
                    <div class="mb-3">
                        <label for="employeePosition" class="form-label">Jabatan</label>
                        <select class="form-select" id="employeePosition" required>
                            <option value="">Pilih Jabatan</option>
                            <option value="Operator Cuci">Operator Cuci</option>
                            <option value="Operator Setrika">Operator Setrika</option>
                            <option value="Customer Service">Customer Service</option>
                            <option value="Supervisor">Supervisor</option>
                            <option value="Manager">Manager</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label for="employeeAddress" class="form-label">Alamat</label>
                        <textarea class="form-control" id="employeeAddress" rows="3"></textarea>
                    </div>
                    <div class="mb-3">
                        <label for="employeeSalary" class="form-label">Gaji</label>
                        <input type="number" class="form-control" id="employeeSalary" required>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Batal</button>
                <button type="button" class="btn btn-primary" onclick="addEmployee()">Simpan</button>
            </div>
        </div>
    </div>
</div>

<!-- Edit Employee Modal -->
<div class="modal fade" id="editEmployeeModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Edit Data Karyawan</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="editEmployeeForm">
                    <div class="mb-3">
                        <label for="editEmployeeId" class="form-label">ID Karyawan</label>
                        <input type="text" class="form-control" id="editEmployeeId" readonly style="background-color: #f8f9fa;">
                        <small class="text-muted">ID karyawan tidak dapat diubah</small>
                    </div>
                    <div class="mb-3">
                        <label for="editEmployeeName" class="form-label">Nama Lengkap <span class="text-danger">*</span></label>
                        <input type="text" class="form-control" id="editEmployeeName" required>
                    </div>
                    <div class="mb-3">
                        <label for="editEmployeeEmail" class="form-label">Email <span class="text-danger">*</span></label>
                        <input type="email" class="form-control" id="editEmployeeEmail" required>
                    </div>
                    <div class="mb-3">
                        <label for="editEmployeePhone" class="form-label">No. Telepon <span class="text-danger">*</span></label>
                        <input type="text" class="form-control" id="editEmployeePhone" required pattern="[0-9\s\-\+\(\)]+" title="Hanya angka yang diperbolehkan">
                        <small class="text-muted">Hanya angka, spasi, tanda hubung, dan tanda kurung yang diperbolehkan</small>
                    </div>
                    <div class="mb-3">
                        <label for="editEmployeePosition" class="form-label">Jabatan <span class="text-danger">*</span></label>
                        <select class="form-select" id="editEmployeePosition" required>
                            <option value="">Pilih Jabatan</option>
                            <option value="Operator Cuci">Operator Cuci</option>
                            <option value="Operator Setrika">Operator Setrika</option>
                            <option value="Customer Service">Customer Service</option>
                            <option value="Supervisor">Supervisor</option>
                            <option value="Manager">Manager</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label for="editEmployeeAddress" class="form-label">Alamat</label>
                        <textarea class="form-control" id="editEmployeeAddress" rows="3"></textarea>
                    </div>
                    <div class="mb-3">
                        <label for="editEmployeeSalary" class="form-label">Gaji</label>
                        <input type="number" class="form-control" id="editEmployeeSalary" min="0">
                    </div>
                    <div class="mb-3">
                        <label for="editEmployeeJoinDate" class="form-label">Tanggal Masuk</label>
                        <input type="date" class="form-control" id="editEmployeeJoinDate">
                    </div>
                    <div class="mb-3">
                        <label for="editEmployeeStatus" class="form-label">Status <span class="text-danger">*</span></label>
                        <select class="form-select" id="editEmployeeStatus" required>
                            <option value="Aktif">Aktif</option>
                            <option value="Nonaktif">Nonaktif</option>
                        </select>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Batal</button>
                <button type="button" class="btn btn-primary" onclick="updateEmployee()">
                    <i class="fas fa-save me-1"></i>Simpan Perubahan
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Delete Employee Confirmation Modal -->
<div class="modal fade" id="deleteEmployeeModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title">
                    <i class="fas fa-exclamation-triangle me-2"></i>Konfirmasi Hapus Karyawan
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div class="alert alert-danger">
                    <i class="fas fa-warning me-2"></i>
                    <strong>PERINGATAN:</strong> Karyawan akan dihapus PERMANEN dari database dan tidak dapat dikembalikan!
                </div>
                <p>Apakah Anda yakin ingin menghapus karyawan berikut secara permanen?</p>
                <div class="card">
                    <div class="card-body">
                        <h6 class="card-title" id="deleteEmployeeName">-</h6>
                        <p class="card-text">
                            <strong>ID:</strong> <span id="deleteEmployeeId">-</span><br>
                            <strong>Jabatan:</strong> <span id="deleteEmployeePosition">-</span><br>
                            <strong>Email:</strong> <span id="deleteEmployeeEmail">-</span>
                        </p>
                    </div>
                </div>
                <div class="mt-3">
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" id="confirmDeleteEmployee">
                        <label class="form-check-label" for="confirmDeleteEmployee">
                            <strong>Ya, saya yakin ingin menghapus karyawan ini secara PERMANEN</strong>
                        </label>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Batal</button>
                <button type="button" class="btn btn-danger" onclick="confirmDeleteEmployee()" id="confirmDeleteBtn" disabled>
                    <i class="fas fa-trash me-1"></i>Hapus Permanen
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/admin.js?v=@DateTime.Now.Ticks&cache=@DateTime.Now.ToString("yyyyMMddHHmmss")"></script>
}